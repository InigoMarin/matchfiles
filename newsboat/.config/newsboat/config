highlight feedlist "NEWSFEED: .*" green default
highlight feedlist "REEDIT: .*" white default
highlight feedlist "GITHUB: .*" magenta default
highlight feedlist "TORRENT: .*" cyan default
highlight feedlist "TWITCH: .*" blue default

text-width 80

